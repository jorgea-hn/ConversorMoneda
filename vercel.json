{
    "version": 2,
    "builds": [
      { "src": "index.py", "use": "@vercel/python" }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "index.py" }
    ],
    "env": {
      "FLASK_APP": "index.py",
      "FLASK_ENV": "production"
    },
    "frameworks": {
      "python": {
        "buildCommand": "pip install -r requirements.txt && python -m pip install -U pip && python -m compileall .",
        "serveCommand": "flask run --port $PORT"
      }
    }
  }
  
  
